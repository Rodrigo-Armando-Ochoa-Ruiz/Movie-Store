<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.p6spy.engine.spy.P6SpyDriver</property>

        <property name="hibernate.connection.url">jdbc:p6spy:mysql://localhost:3306/movie_store</property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="org.example.servlet.web_app.form.entity.Actor"/>
        <mapping class="org.example.servlet.web_app.form.entity.Address"/>
        <mapping class="org.example.servlet.web_app.form.entity.Category"/>
        <mapping class="org.example.servlet.web_app.form.entity.City"/>
        <mapping class="org.example.servlet.web_app.form.entity.Country"/>
        <mapping class="org.example.servlet.web_app.form.entity.Customer"/>
        <mapping class="org.example.servlet.web_app.form.entity.Film"/>
        <mapping class="org.example.servlet.web_app.form.entity.FilmActor"/>
        <mapping class="org.example.servlet.web_app.form.entity.FilmCategory"/>
        <mapping class="org.example.servlet.web_app.form.entity.FilmText"/>
        <mapping class="org.example.servlet.web_app.form.entity.Inventory"/>
        <mapping class="org.example.servlet.web_app.form.entity.Language"/>
        <mapping class="org.example.servlet.web_app.form.entity.Payment"/>
        <mapping class="org.example.servlet.web_app.form.entity.Rental"/>
        <mapping class="org.example.servlet.web_app.form.entity.Staff"/>
        <mapping class="org.example.servlet.web_app.form.entity.Store"/>

    </session-factory>
</hibernate-configuration>
